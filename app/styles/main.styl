#gmaps-container
  background: url(/images/gear.gif) 50% 50% no-repeat #c3c3c3
  min-height: 400px

  .text-muted
    color: #999


  .map-fullscreen
    .box.box-gmaps
      background: #fff
      position: fixed
      height: 100%
      width: 100%
      left: 0
      top: 0
      z-index: 1000
      .angular-google-map
        width: 100%
        height: 100%
      .angular-google-map-container
        width: 100%
        height: 100%
      .box-content.box-gmaps-content
        width: 100%
        height: 100%
    .map-sidebar
      z-index: 100
      position: absolute
      top: 0
      width: 30%
      left: 70%
      background: white
      font-size: 14px;
      line-height: 1.428571429
      font-weight: 400
      font-family: "Helvetica Neue", Helvetica, sans-serif
      h1, h2, h3
        margin-top: 20px
        margin-bottom: 10px
      h4, h5, h6
        margin-top: 10px;
        margin-bottom: 10px;
      h2
        font-size: 16px;
        line-height: 16px;
        font-weight: 300;
      h4
        font-size: 14px;
        line-height: 14px;
        font-weight: 500;

      .information
        position: relative;
        .copy
          padding: 0 10px 20px 20px;

  .angular-google-map-container
    background: #c3c3c3
    min-height: 400px

  .gmaps-window-marker
    padding: 0 5px 5px 5px
    max-width: 300px
    h3
      font-size: 14px !important
      line-height: 13px
      margin: 5px 0 7px
    h4, p, a
      font-size: 12px !important
      line-height: 13px
      margin: 0 0 4px 0
      color: #999999

  .box-gmaps-content
    padding: 0
    position: relative

    .map-sidebar
      z-index: 100
      position: absolute
      top: 0;
      width: 30%;
      left: 70%;
      background: white;
      .information
        position: relative;
        .copy
          padding: 0 10px 20px 20px;

  .dropDownContainer
    position: absolute
    right: 100px
    width: 100px
    z-index: 1
    margin: 5px
    cursor: pointer
    text-align: left

    font-family: Roboto, Arial, sans-serif;
    font-size: 11px
    background: white

    &.btn-fullscreen
      right: 210px

    .dropDownButton
      border: 1px solid rgba(0, 0, 0, 0.35);
      box-shadow: rgba(0, 0, 0, 0.4) 0px 1px 4px -1px;
      z-index: 2

      &:hover
        .dropDownOptionsDiv
          display: block

      .dropDownLabel
        padding: 1px 5px
        font-weight: bold

      .dropDownOptionsDiv
        background-color: white
        display: none
        overflow: hidden

        label
          clear: both
          line-height: 1.2em
          width: 90%
          float: left

        .dropDownItemDiv
          padding: 3px 5px 4px 5px

        .dropDownItemDiv:hover, .checkboxContainer:hover
          background-color: rgb(235, 235, 235)

        .checkboxContainer
          border-top: 1px solid lightgrey
          padding: 3px 8px 3px 5px

          label
            position: relative
            padding: 3px 0 3px 20px
          input
            padding: 4px 4px 0 0
            position: absolute
            left: 0



  // Full-screen styles
  &.map-fullscreen
    height: 100%
    left: 0
    position: fixed
    top: 0
    width: 100%

    .angular-google-map-container
      height: 100%
